@model List<Contribution>

<h2>Liste des Contributions</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Ajouter une contribution</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Montant</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contribution in Model)
        {
            <tr>
                <td>@contribution.ContributionId</td>
                <td>@contribution.Amount</td>
                <td>@contribution.ContributionDate</td>
                <td>
                    <a asp-action="Details" asp-route-id="@contribution.ContributionId" class="btn btn-info">Détails</a>
                    <a asp-action="Edit" asp-route-id="@contribution.ContributionId" class="btn btn-warning">Modifier</a>
                    <a asp-action="Delete" asp-route-id="@contribution.ContributionId" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>

