@{
}
@model List<Category>

<h2>Liste des catégories</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Créer une nouvelle catégorie</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
                <tr>
                    <td>@category.CategoryId</td>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                </tr>
        }
    </tbody>
</table>
